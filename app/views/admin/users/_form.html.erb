<%= form_for([:admin, @user],
             html: { class: "form-horizontal", role: "form"}) do |f| %>

  <%# Custom helper to display internationalized validation errors %>
  <%= display_validation_errors(@user) %>

  <div class=" form-group">
    <%= f.label :email, class: "control-label" %>
      <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password,
                           placeholder: password_placeholder,
                           class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label "Confirm Password", class: "control-label" %>
      <%= f.password_field :password_confirmation,
                           placeholder: password_placeholder,
                           class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :role, class: "control-label" %>
      <%= f.select :role, User.roles.keys, {}, {class: "form-control" } %>
  </div>
  <div class=" form-group">
    <%= f.label :first_name, class: "control-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :last_name, class: "control-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :agency, class: "control-label" %>
      <%= f.text_field :agency, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :qualification, class: "control-label" %>
      <%= f.text_field :qualification, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :city, class: "control-label" %>
      <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :state, class: "control-label" %>
      <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :phone, class: "control-label" %>
      <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class=" form-group">
    <%= f.label :summary, class: "control-label" %>
      <%= f.text_area :summary, class: "form-control" %>
  </div>

  <div class=" form-group">
  </br>
      <%= f.submit class: "btn btn-info form-control" %>
  </div>
<% end %>
