<%= form_for([:admin, @user],
             html: { class: "form-horizontal", role: "form"}) do |f| %>

  <%# Custom helper to display internationalized validation errors %>
  <%= display_validation_errors(@user) %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password,
                           placeholder: password_placeholder,
                           class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Confirm Password", class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation,
                           placeholder: password_placeholder,
                           class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.select :role, User.roles.keys, {}, {class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :agency, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :agency, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qualification, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :qualification, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :summary, class: "col-sm-5 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :summary, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class=" col-sm-5 control-label">
      <%= f.submit class: "btn btn-primary form-control" %>
    </div>
  </div>
<% end %>
