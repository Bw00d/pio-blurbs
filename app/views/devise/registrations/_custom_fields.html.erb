<div class="form-group required">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: "form-control", required: true %>
</div>
<div class="form-group required">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: "form-control", required: true %>
</div>
<div class="form-group">
  <%= f.label :avatar %>
  <% if @user.avatar? %>
    </br><div class="big-avatar"><%= image_tag @user.avatar.url(:med), id: "avatar-image" %></div>
  <% end %>
  <%= f.file_field :avatar, id: "avatar-file" %>
</div>
<div class="form-group">
  <%= f.label :agency %>
  <%= f.text_field :agency, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :host, "ROSS Host" %>
  <%= f.text_field :host, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :status %>
  <%= f.select :status, options_for_select([['Available', 1], ['On Assignment', 2], ['Unavailable', 3]], @user.status ), {prompt: ""}, { class: "form-control" }   %>
</div>
<div class="form-group">
  <%= f.label :qualification %>
  <%#= f.text_field :qualification, class: "form-control" %>
  <%= f.select :qualification, options_for_select([['PIO1'], ['PIO2'], ['PIOF']], @user.qualification),  {prompt: ""}, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.check_box :trainee %>
  <%= f.label "Trainee" %>
</div>
<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :state %>
  <%= f.select :state, options_for_select(Collections::STATES, @user.state), {}, class: "form-control"  %>
</div>
<div class="form-group">
  <%= f.label :phone %>
  <%= f.text_field :phone, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :summary %>
  <%= f.text_area :summary, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :tag_list, "Skills (separated by commas)" %>
  <%= f.text_field :tag_list, value: @user.tag_list.to_s, class: "form-control" %>
</div> 

